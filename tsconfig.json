{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2021",
      "outDir": "dist",
      "lib": [
        "ES2021",
        "dom"
      ],
      "alwaysStrict": true,
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "newLine": "crlf",
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": false,
      "strictNullChecks": false
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}